<!-- X投稿内容(stripで行末の改行を削除) -->
<% tweet_text = <<~EOF.strip
  【MiniReレビュー紹介】

  「#{@review.title}」
  #{truncate(@review.content, length: 50, omission: "…")}

  詳細のレビューはこちら↓
  #{request.original_url}

  #minire #ミニマリスト #愛用品
EOF
%>

<!-- シェアボタン -->
<%= link_to "https://twitter.com/intent/tweet?text=#{CGI.escape(tweet_text)}",
          target: "_blank",
          rel: "noopener",
          class: "inline-flex items-center gap-2 px-3 py-1 border border-gray-300 rounded text-gray-700 text-sm hover:bg-gray-100 transition"  do %>
  <%= image_tag "share-icon.png", alt: "シェアアイコン", width: 18, height: 18 %>
  シェア
<% end %>