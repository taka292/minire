<% @items.each do |item| %>
  <li class="w-80 flex items-center gap-x-3.5 py-2 px-4 border-b border-gray-300 last:border-b-0 text-sm text-gray-800 hover:bg-gray-200 focus:ring-2 focus:ring-blue-500"
      role="option" 
      data-autocomplete-value="<%= item.id %>" 
      data-autocomplete-label="<%= item.name %>">

    <% if item.images.attached? %>
      <%= image_tag item.images.first.variant(resize_to_fill: [40, 40]), class: "w-10 h-10 object-cover rounded-md" %>
    <% end %>

    <%= item.name %>
  </li>
<% end %>