<% @items.each do |item| %>
  <% label = sanitize(item.name.to_s.strip.gsub(/\s+/, " ")) %>

  <li class="w-full flex items-center gap-5 py-4 px-4 border-b border-gray-300 last:border-b-0
             text-base text-gray-800 hover:bg-gray-100 cursor-pointer"
      role="option" 
      data-autocomplete-value="<%= item.id %>" 
      data-autocomplete-label="<%= item.name %>">

    <% if item.images.attached? %>
      <%= image_tag item.images.first.variant(resize_to_fill: [80, 80]), class: "w-20 h-20 object-cover rounded-md flex-shrink-0" %>
    <% end %>

    <span class="text-gray-800 leading-snug">
      <%= truncate(label, length: 50) %>
    </span>
  </li>
<% end %>
