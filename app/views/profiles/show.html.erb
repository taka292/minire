<div class="container mx-auto px-10 py-10">
  <div class="card bg-white shadow-lg rounded-lg p-6">
    <!-- プロフィール情報 -->
    <div class="flex items-center mb-6">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize_to_fill: [100, 100]), class: "w-24 h-24 rounded-full object-cover" %>
      <% else %>
        <span class="material-symbols-outlined text-gray-500 text-6xl">account_circle</span>
      <% end %>
      <div class="ml-6">
        <h1 class="text-2xl font-bold text-gray-800"><%= @user.name %></h1>
        <p class="text-gray-600"><%= @user.introduction.presence || "自己紹介文はまだありません。" %></p>
      </div>
    </div>

    <!-- 投稿数と編集ボタン -->
    <div class="flex justify-between mb-4">
      <p>投稿数: <%= @user.reviews.count %></p>
      <%= link_to "プロフィール編集", edit_profile_path(@user), class: "btn bg-customBlue text-white" %>
    </div>

    <!-- タブ切り替えボタン -->
    <div class="flex space-x-4 mb-6">
      <%= link_to "過去のレビュー", reviews_profile_path(@user), class: "btn btn-outline" %>
      <%= link_to "いいねしたレビュー", likes_profile_path(@user), class: "btn btn-outline" %>
    </div>

    <!-- レビュー一覧 -->
    <% if @reviews.present? %>
      <h2 class="text-lg font-bold mb-4">過去のレビュー</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      </div>
    <% elsif @liked_reviews.present? %>
      <h2 class="text-lg font-bold mb-4">いいねしたレビュー</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      </div>
    <% else %>
      <p>表示するレビューがありません。</p>
    <% end %>
  </div>
</div>
