<% @items.each do |item| %>
  <% label = sanitize(item[:name].to_s.strip.gsub(/\s+/, " ")) %>
  <% value = sanitize(item[:id].to_s) %>
  <% image_url = item[:image_url] %>
  <li class="w-full flex items-center gap-5 py-4 px-4 border-b border-gray-300 last:border-b-0
             text-base text-gray-800 hover:bg-gray-100 cursor-pointer"
      role="option"
      data-autocomplete-value="<%= value %>"
      data-autocomplete-label="<%= label %>">
    
    <% if image_url.present? %>
      <img src="<%= image_url %>" alt="<%= label %>" class="w-20 h-20 object-contain rounded-md flex-shrink-0" />
    <% end %>

    <span class="text-gray-800 leading-snug">
      <%= truncate(label, length: 50) %>
    </span>
  </li>
<% end %>
